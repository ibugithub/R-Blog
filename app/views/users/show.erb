
<div class="container">
    <div class="user-header">
        <h2><%= @user.name %></h2>
        <%= link_to user_posts_path(@user) do %>
        <p>Number of Posts: <%= @posts.count %></p>
        <% end %>
    </div>
    
    <div class="user-bio">
        <h3>Bio</h3>
        <p><%= @user.bio %></p>
    </div>

    <div class="user-posts">
        <% @posts.each do |post| %>
            <div class="post">
                <h2><%= post.title %></h2>
                <p><%= post.text %></p>
            </div>
        <% end %>
    </div>

    <div class="see-all-posts">
        <a href="#">See all posts</a>
    </div>
</div>
